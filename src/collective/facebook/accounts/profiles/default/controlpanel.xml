<?xml version="1.0"?>
<object name="portal_controlpanel"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="collective.facebook.accounts"
   purge="False">
 <configlet title="Facebook"
    action_id="FacebookSettings"
    appId="collective.facebook.accounts"
    category="Products"
    condition_expr=""
    url_expr="string:${portal_url}/@@facebook-controlpanel"
    icon_expr="string:$portal_url/++resource++collective.facebook.accounts.icons/facebook.png"
    visible="True"
    i18n:attributes="title">
  <permission>Manage portal</permission>
 </configlet>
</object>
